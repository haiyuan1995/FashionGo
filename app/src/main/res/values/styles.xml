<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        //波纹涟漪颜色
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
    </style>

    <!-- 上传图片dialog动画-->
    <style name="dialog_select_picture_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_picture_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_picture_out</item>
    </style>
</resources>
