<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="3dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    android:orientation="horizontal">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/id_tab_home"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/id_tab_home_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="#00000000"
            android:clickable="false"
            android:src="@drawable/ic_home_on" />

        <TextView
            android:id="@+id/id_tab_home_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首页"
            android:textColor="#606060" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_tab_order"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/id_tab_order_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="#00000000"
            android:clickable="false"
            android:src="@drawable/ic_order_off" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单"
            android:textColor="#606060"
            android:id='@+id/id_tab_order_tv' />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_tab_shopping"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/id_tab_shopping_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="#00000000"
            android:clickable="false"
            android:src="@drawable/ic_shopping_cart_off" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购物车"
            android:textColor="#606060"
            android:id='@+id/id_tab_shopping_tv' />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_tab_my"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/id_tab_my_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="#00000000"
            android:clickable="false"
            android:src="@drawable/ic_my_off" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的"
            android:textColor="#606060"
            android:id='@+id/id_tab_my_tv' />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_tab_setting"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/id_tab_setting_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="#00000000"
            android:clickable="false"
            android:src="@drawable/ic_settings_off" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:textColor="#606060"
            android:id='@+id/id_tab_setting_tv' />
    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>